    <meta property="og:type" content="website" />
    <meta property="og:title" content="Books" />
    <meta
            property="og:description"
            content="Find books from Google Play Books"
    />
    <link
            href="https://fonts.googleapis.com/css?family=Montserrat:500,600,900&display=swap"
            rel="stylesheet"
    />
    <link rel="stylesheet" href="../public/CSS/style.css" />

</head>
<header class="site-header">
    <h1>CasperLib</h1>
    <a href="/login" class="loginButton">Sign Up</a>
</header>
<body>
    <main id="main" class="main">
        <section class="results">
            <div class="list-book foryou">
                <a class="category" href="#love">
                    <div class="book">
                        <div class="book-info">
                            <h1 class="section-title">Everyday Top 100</h1>
                        </div>
                    </div>
                </a>
                <a class="category" href="#inspirational">
                    <div class="book">
                        <div class="book-info">
                            <h1 class="section-title">Bestsellers</h1>
                        </div>
                    </div>
                </a>
                <a class="category" href="#authors">
                    <div class="book">
                        <div class="book-info">
                            <h1 class="section-title">Best authors</h1>
                        </div>
                    </div>
                </a>
            </div>
        </section>
        <section id="love" class="results">
            <div class="flex">
                <h1 class="section-title">Every day Top 100</h1>
                <div>
                    <button
                            class="pagination prev"
                            onclick="prev('love')"
                    >
                        ◀
                    </button>
                    <button
                            class="pagination next"
                            onclick="next('love')"
                    >
                        ▶
                    </button>
                </div>
            </div>
            <div class="list-book love categories">
                <div class="prompt">
                    <div class="loader"></div>
                </div>
            </div>
            <div class="fade left"></div>
            <div class="fade right"></div>
        </section>
        <section id="inspirational" class="results">
            <div class="flex">
                <h1 class="section-title">Bestsellers</h1>
                <div>
                    <button
                            class="pagination prev"
                            onclick="prev('inspirational')"
                    >
                        ◀
                    </button>
                    <button
                            class="pagination next"
                            onclick="next('inspirational')"
                    >
                        ▶
                    </button>
                </div>
            </div>
            <div class="list-book inspirational categories">
                <div class="prompt">
                    <div class="loader"></div>
                </div>
            </div>
            <div class="fade left"></div>
            <div class="fade right"></div>
        </section>
        <section id="authors" class="results">
            <div class="flex">
                <h1 class="section-title">Best authors</h1>
                <div>
                    <button
                            class="pagination prev"
                            onclick="prev('authors')"
                    >
                        ◀
                    </button>
                    <button
                            class="pagination next"
                            onclick="next('authors')"
                    >
                        ▶
                    </button>
                </div>
            </div>
            <div class="list-book authors categories">
                <div class="prompt">
                    <div class="loader"></div>
                </div>
            </div>
            <div class="fade left"></div>
            <div class="fade right"></div>
        </section>
        <div class="spacer"></div>
        <label class="theme-switch" for="night-mode-checkbox" title="Night mode">
            <input type="checkbox" id="night-mode-checkbox" aria-label="Toggle night mode" />
            <div class="slider round"></div>
        </label>
    </main>
    <footer class="site-footer">
        <p class="site-footer p">Ersin Gabbas - SE-2201</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="/public/JS/index.js"></script>
    <script>
        const header = document.querySelector('.site-header');

        let lastScrollTop = 0;

        function handleScroll() {
            const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

            if (scrollTop > lastScrollTop && scrollTop > header.clientHeight) {
                header.style.top = '-100px';
            } else {
                header.style.top = '0';
            }

            lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
        }

        window.addEventListener('scroll', handleScroll);
    </script>
</body>
</html>
